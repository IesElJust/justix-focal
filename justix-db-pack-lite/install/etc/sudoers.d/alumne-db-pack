################################################
# Política de seguretat per a l'usuari "alumne"#
# Permet executar:                             #
#  apt-get install mongodb-org                 #
#  apt-get install mysql-server                #
################################################

#### CONF. Global

# Alias per al nom del host
Host_Alias LOCAL = localhost, ${HOSTNAME}

# Configuració per a les contrassenyes
Defaults passwd_tries = 3, passwd_timeout = 5

# Màscara de directoris y fitxers per defecte
Defaults@LOCAL umask = 0022

#### USUARIS

# Alias per a "alumne"
User_Alias ALUMNE = alumne

#### ORDRES

# Alias per a les ordres
Cmnd_Alias CMD_APT_INSTALL_MONGO = /usr/bin/apt install justix-asix-meta
Cmnd_Alias CMD_APT_INSTALL_MYSQL = /usr/bin/apt install justix-dam-meta
Cmnd_Alias CMD_APT_GET_INSTALL_MONGO = /usr/bin/apt-get install justix-asix-meta
Cmnd_Alias CMD_APT_GET_INSTALL_MYSQL = /usr/bin/apt-get install justix-dam-meta

#### REGLES
ALUMNE ALL = PASSWD:CMD_APT_INSTALL_MONGO
ALUMNE ALL = PASSWD:CMD_APT_INSTALL_MYSQL
ALUMNE ALL = PASSWD:CMD_APT_GET_INSTALL_MONGO
ALUMNE ALL = PASSWD:CMD_APT_GET_INSTALL_MYSQL
