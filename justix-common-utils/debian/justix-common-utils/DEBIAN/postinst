#!/bin/sh
# postinst script for sample-package
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


enable_tilix(){
    # Configuració per a Tilix
    BASHRC=${1};
    
    #LINIES_VTE=`cat /etc/skel/.bashrc | grep /etc/profile.d/vte.sh | wc -l`
    LINIES_VTE=`cat ${BASHRC} | grep /etc/profile.d/vte.sh | wc -l`

    if [ $LINIES_VTE -eq 0 ]; then
        echo 'if [ $TILIX_ID ] || [ $VTE_VERSION ]; then' >> ${BASHRC}
            echo '    source /etc/profile.d/vte.sh' >> ${BASHRC}
        echo 'fi' >> ${BASHRC}
    fi

    if [ ! -s /etc/profile.d/vte.sh ]; then
        [ -f /etc/profile.d/vte-2.91.sh ] && ln -s /etc/profile.d/vte-2.91.sh /etc/profile.d/vte.sh
    fi
}

case "$1" in
    configure)
    
    # Configure tilix
    enable_tilix /etc/skel/.bashrc

    for usr in `ls /home`; do
      enable_tilix "/home/$usr/.bashrc"
    done

    # Afegint el grup docker si no existeix i afegint-li l'usuari alumne
    echo "\e[1m\e[93m [Justix] \e[95m Adding docker group \e[0m";
    `grep -q docker /etc/group` || groupadd docker 

    echo "\e[1m\e[93m [Justix] \e[95m Adding alumne to docker group \e[0m";
    # Alumne ja existeix perquè pre-depenem de justix-common
    usermod -a -G docker alumne

    echo "\e[1m\e[93m [Justix] \e[95m Getting Virtualbox Extension Pack \e[0m";
    # From: https://unix.stackexchange.com/questions/289685/how-to-install-virtualbox-extension-pack-to-virtualbox-latest-version-on-linux

    LatestVirtualBoxVersion=$(wget -qO - http://download.virtualbox.org/virtualbox/LATEST.TXT)
    VBoxExtPack="Oracle_VM_VirtualBox_Extension_Pack-${LatestVirtualBoxVersion}.vbox-extpack"
    [ -d /var/lib/justix-vbox ] || mkdir /var/lib/justix-vbox
    if [ -f "/var/lib/justix-vbox/${VBoxExtPack}"  ]; then
            echo "\e[1m\e[93m [Justix] \e[95m Virtualbox Extension Pack is installed in its last version. Nothing to do here...\e[0m";
    else
	[ `ls /var/lib/justix-vbox | wc -l` -eq 0 ] || rm -r /var/lib/justix-vbox/*
	wget "http://download.virtualbox.org/virtualbox/${LatestVirtualBoxVersion}/${VBoxExtPack}" --show-progress -O /var/lib/justix-vbox/${VBoxExtPack}
    	VBoxManage extpack install --replace /var/lib/justix-vbox/${VBoxExtPack}
    fi

    # La directiva #includedir no és un comentari, açò sobra
    #sed "s/#includedir\ \/etc\/sudoers.d/includedir\ \/etc\/sudoers.d/g" /etc/sudoers 2>/dev/null

    # Afegint enllaços a les aplicacions per al dock
        for DESKTOP in /usr/share/applications/com.gexperts.Tilix.desktop \
            /usr/share/applications/virtualbox.desktop; do

              APP=`basename $DESKTOP`
                
              [ -f "$DESKTOP" -a ! -L  "/usr/share/justix/folder-groups/utils/$APP" ] && ln -s $DESKTOP /usr/share/justix/folder-groups/utils/

        done
    
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.


exit 0
